    @model EstudoMVC.Models.Funcionario;

@{
    ViewData["Title"] = "Cadastrar Funcionario";
}
<h1>Criar funcionario</h1>


<div>
    <form asp-action="Criar">
    <div class="mb-3">
        @Html.LabelFor(model => model.NomeFuncionario, "Nome do Funcionario", htmlAttributes: new { @class = "control-label" })
        <input asp-for="NomeFuncionario" type="text" class="form-control">
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.SetorId, "Setor", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DropDownListFor(m => m.SetorId, new SelectList(ViewBag.SetorName as List<SelectListItem>, "Value", "Text"), "Selecione o setor", new { @class = "form-control" })
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-primary">
</form>
</div>
